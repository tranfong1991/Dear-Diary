<div class="login">
    <div class="form">
    
    <h1>Log in</h1>
    
    <%= form_for(:session, url: login_path) do |f| %> 
        <%= f.text_field :user_name, :placeholder => "Username", required: true %> 
        <%= f.password_field :password, :placeholder => "Password", required: true %> 
        <%= f.submit "Log in", class: "btn-submit" %>
    <% end %>
    
    <p>New user? <%= link_to "Register here", signup_path %></p>
    </div>
</div>