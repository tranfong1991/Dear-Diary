 #header-title{
   font-family: Copperplate, "Copperplate Gothic Light", fantasy;
   color: white;
 }

.drop-btn {
    background-color: #c91717;
    color: white;
    padding: 16px;
    font-size: 16px;
    border: none;
    cursor: pointer;
}

.search-group-btn {
  height: inherit;
}

.search-btn {
  background-color: #c91717;
  border-radius: 0;
  height: inherit;
  width: 50px;
}

.search-field {
  border-radius: 0;
  height: inherit;
}

.search-box {
  width: 500px;
  height: 50px;
}

.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-content {
    display: none;
    position: absolute;
    right: 0;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
}

.dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

.dropdown-content a:hover {
    background-color: #f1f1f1
}

.dropdown:hover .dropdown-content {
    display: block;
    z-index: 1;
}

.dropdown:hover .drop-btn {
    background-color: #800000;
}

 html, body {
  background: #fff;
  font-family: Arial, sans-serif;
  font-weight: bold;
  margin: 0;
  padding: 0;
  overflow-x: hidden;
  height: 100%;
}

.login h1{
  color: white;
}

.flash-message-wrapper{
  position: fixed;
  /*width: 100%;*/
}

.background-image{
  position: absolute;
  width: 100%;
  height: 100%;
  background: url('<%= asset_path("background.jpg") %> ') no-repeat center center scroll;;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  background-size: cover;
  -o-background-size: cover;
  filter: blur(5px);
  -webkit-filter: blur(5px);
}

.container {
  display: flex;
  justify-content: space-between;
  padding: 0;
  width: 100%;
  background-color: transparent;
  position: relative;
}

.footer{
  position: fixed;
  left: 0px;
  bottom: 0px;
  width: 100%;
  background: black;
}

/* HEADER */

.pull-right {
  margin: 10px 10px 0 0;
}

.center {
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header {
  margin: 0;
  padding: 0;
}

.header li {
 display: inline;
 margin-left: 30px;
}

.header img {
  margin: 0 20px 0 0;
  height: 80px;
  width: 80px;
}
.header a {
  color: #000;
  font-size: 20px;  
  text-decoration: none; 
}

.header a:hover {
  color: #c91717;
  text-decoration: none;   
}

/* ALBUMS */

.album-info {
  padding: 12px 24px 24px;
  background-color: #F1f2f3;
}

.album-info h2 {
  font-size: 18px;
  text-transform: uppercase;
  color: #000;
  font-weight: bold;
  margin: 0;
}

.album-info p {
  color: #000;
  font-size: 14px;
  font-weight: bold;
  margin: 0;
}

.item {
  margin: 0;  
  padding: 0;
}

.item:hover a {
  color: #c91717;
  text-decoration: none;
}

.img-container {
  height: 300px;
  overflow: hidden;
  width: 100%;
}

.photo {
  margin: 0 0 80px;   
}
.photo img {
  width: 100%;
}




/* GALLERY VIEW */

.photos h1 {
  font-size: 24px;
  text-align: center;
  text-transform: uppercase;
  color: #000;
  font-weight: bold;
  margin: 10px 0 20px;
}

.photo-info {
  padding: 12px 24px 24px;
  background-color: #000;
  color: #fff;
  opacity: 0.7;
}

.photo-info p {
  margin: 0;
}

/* FORM PAGES */


.form {
  text-align:center;
  margin: 0 auto 10px;
  padding: 20px 0 10px 0;
  font-size: 16px;
  width: 300px;
  position: relative;
}

input[type=text],
input[type=email],
input[type=password] {
  color: #666666;
  width: 100%;
  border: 1px solid #E6E6E6;
  border-radius: 0px; 
  height: 60px;
  margin: 6px auto;
  text-indent: 10px;
}

.btn-submit {
  color: #FFFFFF;
  font-size: 18px;
  text-transform: uppercase;
  background: #c91717;
  padding: 10px 20px;
  border: 0;
  margin-top: 6px;
}
  
/*  RESPONSIVE */

@media screen and (max-width: 992px) {
  .img-container img {
    width: 100%;
  }
}

@media screen and (max-width: 512px) {
  .pull-right {
    background-color: #f1f2f2;
    position: relative;
    margin: 0;
    width: 100%;
  }

  .pull-right ul {
    margin: 0;
    -webkit-margin-after: 0;
    -webkit-margin-before: 0;
    -webkit-padding-start: 0;
  }

  .pull-right ul li {
    display: block;
    float: left;
    margin: 0;
    padding: 20px 0;
    text-align: center;
    width: 50%;
  }

  .pull-right ul li a {
    display: block;
    width: 100%;
  }

  .img-container {
    height: 200px;
  }
}

div .event {
  cursor: pointer;
}

.dropdown-row {
  display: flex;
  flex-direction: row;
}

.dropdown-row div:first-child {
  flex-grow: 0;
  width: 30px;
}

.spinner {
  display: none;
  text-align: -webkit-center;
}